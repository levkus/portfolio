.container {
  display: flex;
  flex-flow: row nowrap;
  align-items: flex-start;
  justify-content: flex-start;
  cursor: default;

  @media (max-width: 600px) {
    flex-flow: column nowrap;
  }
}

.thumbnail {
  position: relative;
  display: block;
  flex-shrink: 0;
  box-sizing: border-box;
  width: 40%;
  background-position: center top;
  background-size: cover;
  background-repeat: no-repeat;

  @media (max-width: 600px) {
    margin-bottom: 1rem;
    width: 100%;
  }

  &:before {
    display: block;
    padding-top: 60%;
    content: '';

    @media (max-width: 600px) {
      padding-top: 65%;
    }
  }

  &:hover > .overlay {
    opacity: 1;
  }

  .overlay {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(10, 0, 20, .8);
    font-size: 3rem;
    opacity: 0;
    transition: opacity .2s;

    @media (max-width: 945px) {
      top: auto;
      height: 50px;
      background-color: rgba(20, 10, 30, .9);
      font-size: 2rem;
      opacity: 1;
    }

    span {
      margin: 0 1rem;
      cursor: pointer;
      transition: color .2s;

      &:hover {
        color: #fff;
      }
    }
  }
}

.text {
  flex-grow: 1;
  box-sizing: border-box;
  padding-left: 2rem;
  width: 60%;

  @media (max-width: 600px) {
    padding: 0;
    width: 100%;
  }

  h2 {
    margin-top: 0;
    text-transform: uppercase;
    font-family: 'Oswald', sans-serif;
    /*color: #E91E63;*/
  }
}

.year {
  color: rgba(194, 222, 255, .8);
  font-size: .8rem;
}

.techs {
  display: flex;
  flex-flow: row wrap;
  flex-wrap: wrap;
}

.tech {
  box-sizing: border-box;
  margin-right: .5rem;
  margin-bottom: 1rem;
  padding: .3rem;
  border: 1px solid rgba(194, 222, 255, .5);
  border-radius: 5px;
  color: rgba(194, 222, 255, .8);
  font-size: .8rem;
}
