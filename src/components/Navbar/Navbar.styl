.container {

}

.closeArea {
  position: fixed;
  top: 185px;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 13;
  display: none;
  background-color: rgba(0, 0, 0, .5);

  @media (max-width: 945px) {
    display: block;
  }
}

.navbar {
  position: relative;
  box-sizing: border-box;
  margin-right: 2rem;
  padding: 4rem 0 0;


  @media (max-width: 945px) {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 15;
    margin-right: 0;
    padding-top: 0;
    width: 100%;
    height: 185px;
    background: rgba(0, 0, 0, 1);
    transition: transform .2s;
    transform: translateY(-185px);

    &.open {
      transform: translateY(0);
    }
  }
}

.navigation {
  display: flex;
  flex-direction: column;
  align-items: flex-end;

  @media (max-width: 945px) {
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }
}

.link {
  margin-bottom: .3rem;
  margin-bottom: 1rem;
  color: #c2deff;
  text-decoration: none;
  text-transform: uppercase;
  font-weight: 400;
  font-size: 1.2rem;
  font-family: 'Oswald', sans-serif;
  line-height: 1.2rem;
  transition: color .3s;

  @media (max-width: 945px) {
    margin: 1rem 0;
  }

  &:hover {
    color: #fff;
  }
}

.activeLink {
  position: relative;
  color: #fff;
  composes: link;

  @media (max-width: 945px) {
    &:after {
      display: none;
    }
  }
}

.burger {
  position: absolute;
  top: 10px;
  right: 4px;
  z-index: 14;
  display: none;
  width: 3rem;
  height: 3rem;
  text-align: center;
  font-size: 2rem;
  line-height: 3rem;

  @media (max-width: 945px) {
    display: block;
  }
}
