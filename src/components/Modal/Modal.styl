.modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 16;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  background: rgba(194, 222, 255, .4);
  opacity: 0;
  transition: opacity .2s;

  @media (max-width: 400px) {
    padding: 0;
  }
}

.container {
  box-sizing: border-box;
  max-width: 100%;
  max-height: 90%;
  height: 550px;
  color: #c2deff;

  .wrapper {
    position: absolute;
    top: 0rem;
    right: 0rem;
    bottom: 0rem;
    left: 0rem;
    z-index:10;
    overflow: scroll;
    box-sizing: border-box;
    margin-right: -100px;
    padding-right: 100px;
  }
}

.close {
  position: absolute;
  top: 1.5rem;
  right: 1.5rem;
  z-index: 11;
  width: 2rem;
  height: 2rem;
  text-align: center;
  line-height: 2rem;
  cursor: pointer;
  transition: color .3s;

  &:before {
    content: '\f057';
    font-size: 1.5rem;
    font-family: 'FontAwesome';
  }

  &:hover {
    color: #fff;
  }
}
